[gitflow "branch"]
    master = main
    develop = dev

[gitflow "path"]
    hooks = .husky

[gitflow "feature"]
    finish = false
    no-ff = true
    no-merge = true
    keepremote = true
    keeplocal = true
    keepbranch = true
    squash = false
    no-push = true


[gitflow "bugfix"]
    finish = false
    no-ff = true
    no-merge = true
    keepremote = true
    keeplocal = true
    keepbranch = true
    squash = false
    no-push = true


[gitflow "release"]
    finish = false
    no-ff = true
    no-merge = true
    keepremote = true
    keeplocal = true
    keepbranch = true
    squash = false

[gitflow "hotfix"]
    finish = false
    no-ff = true
    no-merge = true
    keepremote = true
    keeplocal = true
    keepbranch = true
    squash = false


[gitflow "prefix"]
    feature = feature/
    bugfix = bugfix/
    release = release/
    hotfix = hotfix/
    versiontag = v


[commit]
    template = .gitmessage.md

[alias]
    cm = commit